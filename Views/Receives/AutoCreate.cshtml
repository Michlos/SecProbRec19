@model SecProbRec19.Models.Receive

@{
    ViewData["Title"] = "AutoCreate";
}

<h1>AutoCreate</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Receive</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MailId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MailId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecDate)
        </dd>
    </dl>

    <form id="autoCreateForm" asp-controller="Receives" asp-action="AutoCreate" method="post">
        <input type="number" class="form-control" name="mailId" id="mailId" required value="@ViewData["MailId"]"/>
        <input type="submit" value="Create" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('autoCreateForm');
        const mailIdInput = document.getElementById('mailId');

        mailIdInput.value = window.location.pathname.split('/').pop(); // Extrai o valor do mailId da URL
        form.submit();
    });
</script>
